# AKILIMO Nigeria Association - Environment Variables Template
# Copy this file to .env and fill in your actual values

# Django Settings
SECRET_KEY=your-secret-key-here-make-it-long-and-random
DEBUG=True
DJANGO_SETTINGS_MODULE=akilimo_nigeria.settings.development

# Allowed hosts (comma-separated for production)
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Database Configuration
# For development (SQLite - no configuration needed)
# For production (MySQL/PostgreSQL)
DATABASE_URL=mysql://username:password@hostname:port/database_name
# OR individual database settings:
DB_ENGINE=django.db.backends.mysql
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_HOST=localhost
DB_PORT=3306

# Site Configuration
SITE_URL=https://yourdomain.com
LANGUAGE_CODE=en-us
TIME_ZONE=Africa/Lagos

# Static and Media Files
STATIC_URL=/static/
MEDIA_URL=/media/

# For cPanel hosting
CPANEL_HOSTING=True
STATIC_ROOT=/home/yourusername/public_html/static/
MEDIA_ROOT=/home/yourusername/public_html/media/

# For other hosting providers, comment out CPANEL_HOSTING or set to False
# CPANEL_HOSTING=False
# STATIC_ROOT=/path/to/static/files
# MEDIA_ROOT=/path/to/media/files

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.your-email-provider.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
EMAIL_HOST_USER=your-email@domain.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com
SERVER_EMAIL=admin@yourdomain.com

# Admin Configuration
ADMIN_NAME=Your Name
ADMIN_EMAIL=admin@yourdomain.com

# API Configuration
EIA_MELIA_API_BASE_URL=https://my.eia.cgiar.org/api/v1/melia
EIA_MELIA_API_TOKEN=your-api-token-here

# Paystack Configuration
PAYSTACK_PUBLIC_KEY=pk_test_your_public_key
PAYSTACK_SECRET_KEY=sk_test_your_secret_key

# Security Settings (for production)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=31536000
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# CORS Configuration (comma-separated)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Caching (optional)
REDIS_URL=redis://localhost:6379/1
CACHE_TIMEOUT=900

# Logging
LOG_LEVEL=INFO
LOG_FILE=/path/to/logs/akilimo_nigeria.log
ERROR_LOG_FILE=/path/to/logs/akilimo_nigeria_error.log

# Optional: Sentry for error tracking
# SENTRY_DSN=https://your-sentry-dsn-here